<h1>Log</h1>
<div clas="container">
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <table id="log" class="display" cellspacing="0" width="100%">
      <thead>
      <tr>
        <th>ip</th>
        <th>ping</th>
        <th>data</th>
      </tr>
      </thead>
      <tbody>
        <% @pings.each do |pinglog|  %>
        <tr>
          <td><%= pinglog.ip %></td>
          <td><%= pinglog.ping %></td>
          <td><%= pinglog.created_at %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-3"></div>
</div>
<div class="row-inline">
  <div class="col-md-12">
    <div id="container" style="width:100%; height:400px;"></div>
  </div>
</div>
<div class="row row-inline">
  <div class="col-md-12" style="display: flex; flex-direction: row-reverse;">
    <button id="refresh" class="btn btn-primary" style="margin-right: 15px;">Refresh</button>
  </div>
</div>
</div>
<script src="https://code.highcharts.com/stock/highstock.js"></script>
